<meta name="robots" content="none">

<% content_for(:html_title) { '利用者詳細 | 管理者用のページ | 即ボコ女子松戸店' } %>

<div class="container">
  <div class="row">
    <% begin %>
      <table border=”1″>
        <tr>
          <th><p>ニックネーム</p></th>
          <th><p>歳</p></th>
          <th><p>スリーサイズ</p></th>
          <th><p>身分証明写真</p></th>
          <th><p>全身写真</p></th>
          <th><p>状態</p></th>
          <th><p>許可</p></th>
        </tr>
        <tr>
          <td><%= @user.performer.nickname %></td>
          <td><%= @user.performer.age %></td>
          <td><%= @user.performer.three_size %></td>
          <td>
            <% if @user.performer.full_body? %>
              <%= image_tag @user.performer.identification.url, class: 'thumbnail' %>
            <% end %>
          </td>
          <td>
            <% if @user.performer.full_body? %>
              <%= image_tag @user.performer.full_body.url, class: 'thumbnail' %>
            <% end %>
          </td>
          <td><%= @user.performer.progress %></td>
          <td>
            <%= button_to "入店許可", "/tests/#{@user.id}", {method: :get, params:{status: '入店'}} %>
            <%= button_to "退店", "/tests/#{@user.id}", {method: :get, params:{status: '退店'}} %>
          </td>
        </tr>
      </table>
      
    <% rescue => e %>
      <%= p e %>
    <% end %>
  </div>
</div>