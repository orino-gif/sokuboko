<div class="row">
  <div class="col-md-12 px-0">
    <h1>&nbsp;書類審査申請</h1>
  </div>
</div>

<div class="container">
  <div class="row my-5">
    <%=   "1⃣・2・3" %>
  </div>
  <div class="row my-5">
    <div class="col-md-7 border border-primary">
      <%= form_with(model: @performer, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :"ニックネーム" %>
          <%= f.text_field :nickname, autofocus: true, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :"年齢" %><%= ' (例:28)半角 '%>
          <%= f.text_field :age, autofocus: true, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :'スリーサイズ ' %><%= "( 例：F90-50-80)" %>
          <%= f.text_field :three_size, autofocus: true, class: 'form-control' %>
        </div>
        
        <%= f.hidden_field :examination, :value => "identification" %>
        
        <div>
          <%= submit_tag("次へ") %>
        </div><br>
      <% end %>
    </div>
  </div>
</div>