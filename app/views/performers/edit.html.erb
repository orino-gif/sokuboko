<div class="row">
  <div class="col-md-12 px-0">
    <h1>&nbsp;登録情報変更画面</h1>
  </div>
</div>

<div class="container">
  <% if 'orino0710@gmail.com' == @certification.email %>
    <div class="row my-5">
      <%= "画像：" %>
      <%= form_with(model: @user.performer, local: true) do |f| %>
        <%= f.file_field :image %>
        <%= submit_tag("登録") %>
      <% end %>
      
      <% if @user.performer.image? %>
        <%= image_tag @user.performer.image.url, class: 'thumbnail'  %>
      <% end %>
    </div>
    
    <div class="row my-5">
      <%= "お店用のプロフィール：" %>
      <table class="table">
        <tr><td>
          <%= form_with(model: @user.performer, local: true) do |f| %>
            <%= "ニックネーム：" %><%= f.text_field :nickname , {size:"30"} %>
            <%= submit_tag "変更" %>
          <% end %>
        </td></tr>
        <tr><td>
          <%= form_with(model: @user.performer, local: true) do |f| %>
            <%= "年齢：" %><%= f.text_field :age ,{size:"10"}%>
            <%= submit_tag "変更" %>
          <% end %>
        </td></tr>
        <tr><td>
          <%= form_with(model: @user.performer, local: true) do |f| %>
            <%= "スリーサイズ(B-W-H)：" %><%= f.text_field :three_size ,{size:"30"} %>
            <%= submit_tag "変更" %>
          <% end %>
        </td></tr>
        <tr><td>
          <%= form_with(model: @user.performer, local: true) do |f| %>
            <%= "可能な攻撃技：" %><%= f.text_area :attack ,{value: 'ビンタ、金蹴り、膝蹴り、お尻ぺんぺん、金玉握り、膝金、電気あんま、手錠拘束、拘束シコシコ尋問、チョークスリーパー、腕十字固め、踏みつけ、金玉殴り、ちんぽビンタ、人間マット、太もも締め',size:"60x8"} %>
            <%= submit_tag "変更" %>
          <% end %>
        </td></tr>
      </table>
    </div>
  <% end %>
      
  <% if '女' == @user.sex %>
    <div class="row my-5">
      <%= "週間スケジュール：" %>
      <table>
        <tr><td>
          <%= form_with(model: @user.performer, local: true) do |f| %>
            <%= "可能な日時(定休日 月曜日、店営業18:00～00:00、休暇 00:00～00:00 or [空白]～[空白])：" %><br>
            <%= "　日曜日　" %><%= f.time_select  :sun_start ,include_blank: true, class: 'form-control' %><%="～" %><%= f.time_select  :sun_end ,include_blank: true, class: 'form-control' %><br>
            <%= "　火曜日　" %><%= f.time_select  :tue_start ,include_blank: true, class: 'form-control' %><%="～" %><%= f.time_select  :tue_end ,include_blank: true, class: 'form-control' %><br>
            <%= "　水曜日　" %><%= f.time_select  :wed_start ,include_blank: true, class: 'form-control' %><%="～" %><%= f.time_select  :wed_end ,include_blank: true, class: 'form-control' %><br>
            <%= "　木曜日　" %><%= f.time_select  :thu_start ,include_blank: true, class: 'form-control' %><%="～" %><%= f.time_select  :thu_end ,include_blank: true, class: 'form-control' %><br>
            <%= "　金曜日　" %><%= f.time_select  :fri_start ,include_blank: true, class: 'form-control' %><%="～" %><%= f.time_select  :fri_end ,include_blank: true, class: 'form-control' %><br>
            <%= "　土曜日　" %><%= f.time_select  :sat_start ,include_blank: true, class: 'form-control' %><%="～" %><%= f.time_select  :sat_end ,include_blank: true, class: 'form-control' %>
            <%= f.submit "変更" %>
          <% end %>
        </td></tr>
      </table>
    </div>
    
    <div class="row my-5">
      <%= form_with(model: @user.performer, local: true) do |f| %>
        <%= "SNSリンク先：" %><%= f.text_field :sns ,{size:"30"} %>
        <%= submit_tag "変更" %>
      <% end %>
    </div>
  <% end %>
  
  <div class="row my-5">
    <%= "アカウント情報：" %>
    <table class="table">
      <tr><td><%= "Eメール：#{@user.email}" %></td></tr>
      <tr><td><%= " パスワード: xxxxxxxxxxx" %></td></tr>
      <tr><td><%= "在籍 or 退会：在籍" %></td></tr>
      <td><button type="button">
        <%= link_to "変更", edit_user_registration_path %>
      </button></td>
    </table>
  </div>
</div>