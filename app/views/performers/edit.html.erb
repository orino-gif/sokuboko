<div class="row">
  <div class="col-md-12 px-0">
    <h1>&nbsp;登録情報変更画面</h1>
  </div>
</div>

<div class="container">
  <div class="row my-5">
    <%= "画像：" %>
    <%= form_with(model: @performer, local: true) do |f| %>
        <%= f.file_field :image %>
        <%= submit_tag("登録") %>
      <% end %>
    <% if @performer.image? %>
      <%= image_tag @performer.image.url, class: 'thumbnail'  %>
    <% end %>
  </div>
  
  <div class="row my-5">
    <%= "お店用のプロフィール：" %>
    <table class="table">
      <tr><td>
        <%= form_with(model: @performer, local: true) do |f| %>
          <%= "ニックネーム：" %><%= f.text_field :nickname ,{size:"30"}%>
          <%= submit_tag "変更" %>
        <% end %>
      </td></tr>
      <tr><td>
        <%= form_with(model: @performer, local: true) do |f| %>
          <%= "年齢：" %><%= f.text_field :age ,{size:"10"}%>
          <%= submit_tag "変更" %>
        <% end %>
      </td></tr>
      <tr><td>
        <%= form_with(model: @performer, local: true) do |f| %>
          <%= "スリーサイズ(B-W-H)：" %><%= f.text_field :three_size ,{size:"30"}%>
          <%= submit_tag "変更" %>
        <% end %>
      </td></tr>
      
      <tr><td><%= "可能な攻撃技：" %></td></tr>
    </table>
  </div>
  
  <div class="row my-5">
    <%= "アカウント情報：" %>
    <table class="table">
      <tr><td><%= "Eメール：#{@user.email}" %></td></tr>
      <tr><td><%= " パスワード: xxxxxxxxxxx" %></td></tr>
      <tr><td><%= "在籍 or 退会：在籍" %></td></tr>
      <td><button type="button">
        <%= link_to "変更", edit_user_registration_path %>
      </button></td>
    </table>
  </div>
</div>