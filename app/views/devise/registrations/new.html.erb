<h1><%= t('.sign_up') %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="form-group">
    <%= f.label :"ニックネーム" %>
    <%= f.text_field :nickname, autofocus: true, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :"氏名" %>
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :"フリガナ(全角入力)" %>
    <%= f.text_field :furigana, autofocus: true, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :"郵便番号(例：2702222)" %><br />
    <%= f.text_field :post_number, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :"住所(全角入力)" %><br />
    <%= f.text_field :address, autofocus: true, class: 'form-control' %>
  </div>
  
  <label><%= f.radio_button :sex, "男" %>男</label>
  <label><%= f.radio_button :sex, "女" %>女</label>
  
  <div class="form-group">
    <%= f.label :"電話番号(例：08017640797)" %><br />
    <%= f.text_field :telephone_number, autofocus: true, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, class: 'form-control', autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %><br />
    <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_up') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
