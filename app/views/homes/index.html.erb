<div class="row">
  <div class="col-md-12 px-0">
    <h1>&nbsp;トップページ</h1>
  </div>
</div>

<div class="container-fluid">
  
  <div class="row">
    <h3>■在籍女子紹介</h3>
  </div>
  
  <div class="row">
    <% begin %>
      <% @performers.each do |performer| %>
        <div class="col-md-auto">
          <% if performer.image? %>
            <%= link_to image_tag(performer.image.url, class: 'thumbnail'), "/performers/#{performer.user_id}" %>
          <% else %>
            <%= link_to image_tag('/img/pending.png', class: 'thumbnail'), "/performers/#{performer.user_id}" %>
          <% end %>
          
          <div class="text-center">
            <span style="font-size: 12px;"><%= performer.user.nickname %></span>
          </div>
        </div>
      <% end %>
    <% rescue => e %>
      <%= p e %>
    <% end %>
  </div>
</div>
  