<% content_for(:html_title) { 'リクエスト一覧 | 即ボコ女子松戸店' } %>

<h1>リクエスト</h1>

<div class="container">
  
  <%= "リクエスト：" %>
  <%= form_with(model: @homes, local: true) do |f| %>
    <%= f.text_area :request ,{value: 'text',size:"60x8"} %>
    <%= f.hidden_field :sender_id, :value => @sender.id %>
    <%= f.hidden_field :receiver_id, :value => @receiver.id %>
    <%= f.submit "送信" %>
  <% end %>
</div>
